@model UserAccountViewModel
@{
    ViewData["Title"] = "CreateAccount";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}






    <div class="container">

        <form  asp-antiforgery="true" asp-action="CreateAccount" asp-controller="account" method="post">
            
            <div class="row justify-content-md-center">
                <div class="col-xl-5 col-lg-6 col-md-6 col-sm-12">
                    <div class="login-screen">
                        <div asp-validation-summary="All" style="color:red;font-size:15px;">

                        </div>
                        <div class="login-box">
                            <a href="#" class="login-logo">
                                <img src="/img/logo-dark.png" alt="Wafi Admin Dashboard">
                            </a>
                            <h5>خوش آمدید,<br>در این صفحه میتوانید برای خود حساب کاربری ایجاد کنید.</h5>
                            <div class="form-group">
                                <input asp-for="Email" type="email" class="form-control" placeholder="آدرس ایمیل">
                                <span asp-validation-for="Email" class="validation"></span>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="تکرار رمز عبور">
                                    <br />


                                </div>
                                <small id="passwordHelpInline" class="text-muted">
                                    رمز عبور باید حداقل ۶ کارکتر باشد
                                </small>
                                <br />
                                <div class="col-12">
                                    <span asp-validation-for="Password" class="validation"></span>
                                    <br />
                                    <span asp-validation-for="ConfirmPassword" class="validation"></span>
                                </div>

                            </div>

                            <div class="form-group">
                                <input asp-for="PersianName" type="text" class="form-control" placeholder="نام کاربری">
                                <small id="passwordHelpInline" class="text-muted">
                                    این نام در سایت به باقی کاربران نمایش داده میشود.
                                </small>
                                <br />
                                <span asp-validation-for="PersianName" class="validation"></span>
                            </div>

                            <div class="actions mb-4">

                                <button type="submit" class="btn btn-primary">ایجاد حساب</button>
                            </div>
                            <hr>
                            <div class="m-0">
                                <span class="additional-link">آیا اکانت دارید؟ <a asp-action="Login" asp-controller="Account" class="btn btn-dark">ورود</a></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>








